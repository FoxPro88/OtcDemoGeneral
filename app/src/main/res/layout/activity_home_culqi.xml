<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    android:id="@+id/layout_home"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bbva_blue"
    tools:context="com.culqi.HomeCulqiActivity">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="0dp">

        <ImageView
            android:id="@+id/btn_sales"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/ic_bbva_sales" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Ventas"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="25dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout">

        <LinearLayout
            android:padding="20dp"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/btn_cancellations"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/ic_cancellations" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Anulaciones"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textSize="25dp" />

        </LinearLayout>

        <LinearLayout
            android:padding="20dp"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/btn_queries"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/ic_queries" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Consultas"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textSize="25dp" />

        </LinearLayout>


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
