<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.otc.ui.DemoActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="20dp"
                android:textSize="30dp"
                android:textStyle="bold"
                android:text="Demos OTC" />


            <Button
                android:id="@+id/btn_demo"
                android:text="Demo Restaurant"
                android:layout_width="match_parent"
                android:layout_height="70dp"/>

            <Button
                android:id="@+id/btn_otc"
                android:text="Demo OTC"
                android:layout_width="match_parent"
                android:layout_height="70dp"/>


            <Button
                android:id="@+id/btn_bbva"
                android:text="Demo BBVA"
                android:layout_width="match_parent"
                android:layout_height="70dp"/>

            <Button
                android:id="@+id/btn_culqi"
                android:text="Demo CULQI"
                android:layout_width="match_parent"
                android:layout_height="70dp"/>

            <Button
                android:id="@+id/btn_izipay"
                android:text="Demo IZIPAY"
                android:layout_width="match_parent"
                android:layout_height="70dp"/>

            <Button
                android:id="@+id/btn_vendemas"
                android:text="Demo VENDEMAS"
                android:layout_width="match_parent"
                android:layout_height="70dp"/>

            <Button
                android:id="@+id/btn_inject_keys"
                android:text="Inyectar Llaves"
                android:layout_width="match_parent"
                android:layout_height="70dp"/>

            <Button
                android:id="@+id/btn_clean_keys"
                android:text="Limpiar Llaves"
                android:layout_width="match_parent"
                android:layout_height="70dp"/>

            <Button
                android:id="@+id/btn_validate_keys"
                android:text="Validar Llaves"
                android:layout_width="match_parent"
                android:layout_height="70dp"/>


            <Button
                android:id="@+id/btn_read_emv"
                android:text="Leer EMV"
                android:layout_width="match_parent"
                android:layout_height="70dp"/>

            <Button
                android:id="@+id/btn_print"
                android:text="Demo Print"
                android:layout_width="match_parent"
                android:layout_height="70dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="V.1.0.1" />

        </LinearLayout>

    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>
